                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Websites</h4>
                                    <p class="category">Best way to know what your visitors are doing on your website.</p>
                                    <br />
                                </div>
                                <div class="content">
                                    <ul class="list-unstyled team-members">
                                        @foreach (var w in Model.Stats)
                                        {
                                            <li>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <a href="http://@w.Site.Name" target="_blank">@w.Site.Name</a>
                                                    </div>
                                                    <div class="col-md-3 text-right">
                                                        @w.VisitCount Visits Tracked
                                                    </div>
                                                    <div class="col-md-3 text-right">
                                                        @w.ActivityCount Activties Recorded
                                                    </div>
                                                    <div class="col-md-3 text-right">
                                                        <a href="@Url.Content("~/report/websitepublicstats/" + @w.Site.ID)">Dashboard</a>
                                                    </div>
                                                </div>
                                            </li>
                                        }


                                    </ul>

                                </div>
                            </div>
                        </div>
